<idea-plugin>
    <id>com.omnedia.functionfolding</id>
    <name>OM Function Folding</name>
    <vendor>Omnedia</vendor>

    <depends>com.intellij.modules.platform</depends>
    <depends>JavaScript</depends>

    <actions>
        <action id="ToggleFunctionFolds"
                icon="/icons/pluginIcon.svg"
                class="com.omnedia.functionfolding.ToggleFunctionFoldsAction"
                text="Toggle Function Folds"
                description="Collapse/Expand all function blocks in file">
            <keyboard-shortcut keymap="$default"
                               first-keystroke="alt shift F"/>
        </action>
    </actions>
</idea-plugin>
